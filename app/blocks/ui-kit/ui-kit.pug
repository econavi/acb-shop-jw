  //- Form select
  .ui-section
    h2.ui-section__title Form select
    .ui-section__component
      .ui-section__line.ui-mw-300
        select.form-select.form-input
          option 10
          option 20
          option 30
    .ui-section__description
      p Смесь блоков: form-input, form-select

  //- Pagination
  .ui-section
    h2.ui-section__title Pagination
    .ui-section__component
      .ui-section__line
        include ../pagination/pagination.pug
        +pagination()
    .ui-section__description
      p Блоков: pagination
